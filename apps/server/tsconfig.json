{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    // ? ALIAS READABILITY
    "paths": {
      "@shared/first/*": ["../../packages/shared/dist/*"]
    }
  },

  "include": ["src"],
  // ? SHARED MUST HAVE COMPOSITE TRUE TO BE INCORPORATED
  "references": [{ "path": "../../packages/shared" }]
}
