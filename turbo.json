{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["ONLY_DEPLOY_MAIN"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^dev"],
      "outputs": []
    },

    "check": {
      "cache": false,
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"]
    },
    "@shared/first#build": {
      "outputs": ["dist/**"]
    },
    "client#build": {
      "dependsOn": ["@shared/first#build"],
      "outputs": [".next/**"]
    },
    "server#build": {
      "dependsOn": ["@shared/first#build"],
      "outputs": ["dist/**"]
    }
  }
}
