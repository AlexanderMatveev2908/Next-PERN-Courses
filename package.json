{
  "name": "next-pern-courses",
  "packageManager": "yarn@4.9.2",
  "scripts": {
    "install-vercel": "corepack enable && corepack prepare yarn@4.9.1 --activate && yarn install",
    "clean": "find . -type f -name '*.tsbuildinfo' -delete && find . -type d -name 'dist' -exec rm -rf {} +",
    "dev": "yarn workspace shared build && turbo dev",
    "build": "turbo build --force",
    "start": "turbo start",
    "license-fix": "find . -name package.json -not -path '*/node_modules/*' -exec sh -c 'jq \".license = \\\"UNLICENSED\\\"\" \"$1\" > \"$1.tmp\" && mv \"$1.tmp\" \"$1\"' _ {} \\;"
  },
  "devDependencies": {
    "turbo": "^2.5.4"
  },
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "license": "UNLICENSED"
}
